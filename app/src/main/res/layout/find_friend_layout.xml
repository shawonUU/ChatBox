<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="#000"
        android:weightSum="50"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePicID"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="65dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:src="@drawable/defoult_image_common"
            app:civ_border_width="2dp"
            android:layout_marginRight="7dp"
            app:civ_border_color="#000" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="48"
            android:layout_gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="25"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/userNmaeID"
                    android:layout_width="0dp"
                    android:layout_weight="24"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:text="User Nameee"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/greenCircleId"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:background="@drawable/circle_grin"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/blueCircleId"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:background="@drawable/circle_blue"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/statusID"
                android:layout_width="match_parent"
                android:textColor="#fff"
                android:textSize="12dp"
                android:text="Status"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:weightSum="3"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/acceptButtonId"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:background="@drawable/my_button_green"
                    android:text="Accept"
                    android:padding="2dp"
                    android:layout_marginRight="3dp"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/deletButtonId"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:background="@drawable/my_button_red"
                    android:text="Delete"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="#fff"/>

            </LinearLayout>

        </LinearLayout>
        <ImageButton
            android:id="@+id/chatButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_gravity="center"
            android:background="@drawable/background_circul"
            android:padding="7dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/chat_icone" />

    </LinearLayout>

</LinearLayout>